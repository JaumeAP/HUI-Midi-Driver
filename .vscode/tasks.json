{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build Workspace",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-std=c++11",
                "-D__MACOSX_CORE__",
                "-framework","CoreMidi",
                "-framework","CoreAudio",
                "-framework","CoreServices",
                "-I${workspaceFolder}/rtmidi",               
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/rtmidi/RtMidi.cpp",
                "${workspaceFolder}/hui/huimidi.cpp",
                "${workspaceFolder}/hui/porttime/porttime.c",
                "${workspaceFolder}/hui/porttime/ptmacosx_mach.c",
                "-o","${workspaceFolder}/main",
                "-Wno-deprecated",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by JAP."
        }
    ]
}
