{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build Workspace",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-D__MACOSX_CORE__",
                "-framework","CoreMidi",
                "-framework","CoreAudio",
                "-framework","CoreServices",
                "-I${workspaceFolder}/rtmidi",
                "-o","${workspaceFolder}/main",
                "${workspaceFolder}/modules.cpp",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by JAP."
        }
    ]
}
